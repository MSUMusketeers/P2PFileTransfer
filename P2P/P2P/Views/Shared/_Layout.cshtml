<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FileFlow</title>
    <!-- Geist Sans font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Default Bootstrap Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Our Custom Stylesheet (which we did customize) -->
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- CSS Isolation -->
    <link rel="stylesheet" href="~/P2P.styles.css" asp-append-version="true" />

</head>
<body>
    <header class="sticky-top border-bottom bg-white" style="--bs-bg-opacity: 0.50; backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px);">
        <div class="container d-flex align-items-center" style="height: 64px;">
            <a class="d-flex align-items-center gap-2 text-decoration-none" href="/Home/Index">
                <span class="fs-4 fw-bold gradient-text">FileFlow</span>
            </a>
            <nav class="ms-auto d-flex gap-4" id="navbar">
                <a href="#how-it-works" class="text-decoration-none small fw-medium text-muted hover-text-dark">
                    How It Works
                </a>
                <a href="#features" class="text-decoration-none small fw-medium text-muted hover-text-dark">
                    Features
                </a>
                <a id="History" asp-controller="DisplayTransferedFiles" asp-action="Index" class="text-decoration-none small fw-medium text-muted hover-text-dark">
                    History
                </a>

            </nav>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top bg-light">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="small text-muted mb-0">
                        Built with care by FileFlow. No cookies, no tracking.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="https://github.com" target="_blank" rel="noreferrer" class="text-muted me-3">
                        <i data-lucide="github"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Lucide Icons -->
    @* <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.min.js"></script>  *@
    <script src="~/js/lucide.min.js" onload="lucide.createIcons()"></script>

   

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

